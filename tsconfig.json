{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES2022",
    "rootDir": "./src",
    "moduleResolution": "node",
    "paths": {
      "*": ["./types/*.d.ts"]
    },
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  }
}
